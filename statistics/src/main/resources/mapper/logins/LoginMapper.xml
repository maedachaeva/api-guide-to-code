<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.demo.statistics.domain.logins.mapper.LoginMapper">
    <select id="selectAverageDailyLogins"
            resultType="com.demo.statistics.domain.logins.dto.LoginAvgStat">
        SELECT
            #{fromDate} AS fromDate,
            #{toDate} AS toDate,
            ROUND(
                COUNT(*) / (DATEDIFF(#{toDate}, #{fromDate}) + 1), 1
            ) AS loginCount
        FROM request_info
        WHERE request_code = 'L'
            AND create_date <![CDATA[>=]]> #{fromDate}
            AND create_date <![CDATA[<]]>  DATE_ADD(#{toDate}, INTERVAL 1 DAY)
    </select>

    <!--<select id="selectYearLogin" resultType="com.demo.statistics.domain.logins.dto.YearLoginCount">
        SELECT #{year} AS year, COUNT(*) AS totCnt
        FROM statistic.request_info
        WHERE YEAR(create_date) = #{year}
        AND request_code = 'L'
    </select>

    <select id="selectYearMonthLogin" resultType="com.demo.statistics.domain.logins.dto.YearMonthLoginCount">
        SELECT #{yearMonth} AS yearMonth, COUNT(*) AS totCnt
        FROM statistic.request_info
        WHERE DATE_FORMAT(create_date, '%Y%m') = #{yearMonth}
        AND request_code = 'L'
    </select>-->
</mapper>